<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<script>
		// 如果今天是星期六，那么1000天后是星期几？用一条语句计算出来
		var digit = prompt("请输入天数：");
		var future = digit%7;
		switch(future){
			case 0 : alert("星期六");
				break;
			case 1 : alert("星期日");
				break;
			case 2 : alert("星期一");
				break;
			case 3 : alert("星期二");
			 	break;
			case 4 : alert("星期三");
				break;
			case 5 : alert("星期四");
				break;
			case 6 : alert("星期五");
				break;
			default : alert("输入错误");
			}
	</script>
</body>
</html>
